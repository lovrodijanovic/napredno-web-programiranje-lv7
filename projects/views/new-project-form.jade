extends layout

block content
  h1 Create Project
  form.form-container(action="/projects", method="POST")
    .form-group
      label.form-label(for="name") Name:
      input.form-input(type="text", id="name", name="name")
    .form-group
      label.form-label(for="description") Description:
      textarea.form-input.form-textarea(id="description", name="description")
    .form-group
      label.form-label(for="price") Price:
      input.form-input(type="number", id="price", name="price")
    .form-group
      label.form-label(for="finished_jobs") Finished Jobs:
      ul#finished_jobs
        - for (var i = 0; i < 3; i++) 
          li
            input.form-input(type="text", name="finished_jobs[job_name]")
    .form-group
      label.form-label(for="start_date") Start Date:
      input.form-input(type="date", id="start_date", name="start_date")
    .form-group
      label.form-label(for="end_date") End Date:
      input.form-input(type="date", id="end_date", name="end_date")  
    div
      .form-group
        input.form-submit(type="submit", value="Create Project")
